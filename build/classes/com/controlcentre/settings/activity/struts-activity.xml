<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	 <constant name="struts.custom.i18n.resources" value="saveActivity" />

	<package name="activity" extends="struts-default">
			<action name="saveActivity" class="com.controlcentre.settings.activity.ClsActivityAction" method="saveAction">
				<interceptor-ref name="params"/>
				<result name="success">activity.jsp</result>
				<result name="fail">activity.jsp</result>
			</action>
			
			 <action name="searchDetails" class="com.controlcentre.settings.activity.ClsActivityDAO" method="searchDetails">
				<interceptor-ref name="params"/>
				<result name="success" >country.jsp</result>
				<result name="fail">country.jsp</result>
			</action>  
		</package>	
</struts>
